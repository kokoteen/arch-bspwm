ws-icon-7 = 8;ÔÅº
ws-icon-8 = 9;ÔãÜ
ws-icon-9 = 10;ÔÜ∞
ws-icon-default = "Ôâ¨ "


format = <label-state> <label-mode>

label-focused = %icon%
