[module/battery]
;https://github.com/jaagr/polybar/wiki/Module:-battery
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 100
;Ôïú ÔïÑ Ôóπ Ôó∂
format-charging = <animation-charging> <label-charging>
label-charging = Ôïú %percentage%%
format-charging-foreground = ${colors.foreground}
format-charging-background = ${colors.background}
format-charging-underline = ${colors.color14}

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = ÔïÑ %percentage%%
format-discharging-underline = ${colors.color14}
format-discharging-foreground = ${colors.foreground}
format-discharging-background = ${colors.background}
;Ôï∏ Ôïø ÔïΩ Ôïª Ôñç 
format-full-prefix = "Ôï∏ "
format-full-prefix-foreground = ${colors.color14}
format-full-underline = ${colors.color14}
format-foreground = ${colors.foreground}
format-background = ${colors.background}

ramp-capacity-0 = Ôñç
ramp-capacity-1 = Ôïª
ramp-capacity-2 = ÔïΩ
ramp-capacity-3 = Ôïø
ramp-capacity-4 = Ôï∏
ramp-capacity-foreground = ${colors.foreground}

animation-charging-0 = Ôñç
animation-charging-1 = Ôïª
animation-charging-2 = ÔïΩ
animation-charging-3 = Ôïø
animation-charging-4 = Ôï∏
