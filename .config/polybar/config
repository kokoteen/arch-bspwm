[module/bspwm]
type = internal/bspwm

enable-click = true
enable-scroll = true
reverse-scroll = true
pin-workspaces = true

ws-icon-0 = 1;ÔÇ¨
ws-icon-1 = 2;Ôáã
ws-icon-2 = 3;Ôáª
ws-icon-3 = 4;ÔÉÉ
ws-icon-4 = 5;ÔÄæ
ws-icon-5 = 6;ÔÄΩ
