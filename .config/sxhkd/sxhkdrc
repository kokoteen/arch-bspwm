#########################
# SUPER + FUNCTION KEYS #
#########################

# GoogleChrome
super + F1
      opera
      #google-chrome-stable

# File Manager
super + F2
      thunar

# Rofi
super + F3
      rofi -show run

# Emoji
super + F4
      rofimoji

# Appfinder
super + F5
      xfce4-appfinder

# Meld
super + F6
      meld


# Virtualbox
super + F7


#
super + F8


# Oblogout
super + F9
      oblogout

#
super + F10


# Rofi Fullscreen
super + F11
      rofi -show run -fullscreen

# Rofi theme selector
super + F12
      rofi-theme-selector  

#########################
# SUPER + ... KEYS      #
#########################
 
#Toggle fullscreen of window
super + f
      bspc node --state \~fullscreen

# Htop
super + h
      urxvt 'htop task manager' -e htop


# Toggle pseudo tiling of window
super + p
      bspc node --state \~pseudo_tiled

#Pavucontrol
super + v
      pavucontrol

#Hide polybar
super + y
      polybar-msg cmd toggle

#Xkill
super + Escape
      xkill

#Terminal emulator
super + Return
      urxvt

#########################
# SUPER + SHIFT KEYS    #
#########################

#DMENU
super + shift + d
      dmenu_run -i -nb '#191919' -nf '#fea63c' -sb '#fea63c' -sf '#191919' -fn 'NotoMonoRegular:bold:pixelsize=23'

#Reload bspwm
super + shift + r
      ~/.config/bspwm/bspwmrc

#reload sxhkd:
super + shift + s
      pkill -USR1 -x sxhkd

#kill
super + shift + q
      bspc node -c

#Logout
super + shift + x
      bspc quit

#Screen-Locker
super + shift + l
      slimlock

#Xfce4-settings-manager
super + shift + s
      xfce4-settings-manager


#########################
# CONTROL + SHIFT KEYS  #
#########################

#Xcfe4-TaskManager
ctrl + shift + Escape
      xfce4-taskmanager


#########################
#     SCREENSHOTS       #
#########################

#Scrot
Print
    scrot 'ArcoLinux-%Y-%m-%d-%s_screenshot_$wx$h.jpg' -e 'mv $f $$(xdg-user-dir PICTURES)'

#screeenshooter
ctrl + Print
     xfce4-screenshooter

#Gnome-Screenshot
ctrl + shift + Print
     gnome-screenshot -i


#########################
#     MULTIMEDIA KEYS   #
#########################

#Raises volume
XF86AudioRaiseVolume
    amixer set Master 10%+

#Lowers volume
XF86AudioLowerVolume
    amixer set Master 10%-

#Mute
XF86AudioMute
    amixer -D pulse set Master 1+ toggle

#Playerctl works for Pragha, Spotify and others
#DELETE the line for mpc if you want to use playerctl
#putting a hashtag in front of the mpc line will NOT work
#mpc works for ncmpcpp

#PLAY
XF86AudioPlay
    mpc toggle
    #playerctl play-pause

#Next
XF86AudioNext
     mpc next
     #playerctl next

#previous
XF86AudioPrev
    mpc prev
    #playerctl previous

#Stop
XF86AudioStop
    mpc stop
    #playerctl stop

#Brightness up
XF86MonBrightnessUp
    xbacklight -inc 10

#Brightness down
XF86MonBrightnessDown
    xbacklight -dec 10


#########################
# BSPWM LAYOUT KEYS     #
#########################

#################################################################

#Focus selected desktop FOR QWERTY KEYBOARDS
super + {1-9,0}
      bspc desktop -f '^{1-9,10}'

#################################################################

#Move window to selected desktop FOR QWERTY KEYBOARDS
super + shift + {1-9,0}
      id=$(bspc query -N -n); bspc node -d ^{1-9,10}; bspc node -f ${id}}

#################################################################


#Focus selected desktop
alt + Tab
    bspc desktop -f '^{1-9,10}'

#Focus selected desktop
super + Tab
      bspc desktop -f '^{1-9,10}'


# Focus next/previous window
ctrl + alt + Left
      bspc node --focus west

# Focus next/previous window
ctrl + alt + Right
      bspc node --focus east

# Focus Up window
ctrl + alt + Up
      bspc node --focus north

# Focus Down window
ctrl + alt + Down
      bspc node --focus south

#Rotate desktop
alt + space
      bspc node @/ --rotate {90,-90}

# Swap windows by direction
super + {_,shift + }{Left,Down,Up,Right}
      bspc node --{focus,swap} {west,south,north,east}

# Focus windows by direction
ctrl + super + {Left,Down,Up,Right}
      bspc node --{focus} {west,south,north,east}

# Flip layout vertically/horizontally
super + {_,shift + }a
      bspc node @/ --flip {vertical,horizontal}

# Expand tiled space
alt + shift + {h,j,k,l}
      bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# Contract tiled space
super + ctrl + {h,j,k,l}
      bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# Increase/decrease window gap on focused desktop
super + bracket{left,right}
      bspc config -d focused window_gap $((`bspc config -d focused window_gap` {-,+} 5 ))

# Move floating window
super + alt + {_,shift + }{Left,Down,Up,Right}
      ~/.config/bspwm/scripts/move-window {_,edge-}{west,south,north,east}

# set the window state
super + space
      bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Focus parent/brother/first/second for preselection
super + ctrl + {e,r,t,y}
      bspc node --focus @{parent,brother,first,second}

# Preselect the splitting area for next window on leaf/parent
super + ctrl + {u,i,o,p}
      bspc node --presel-dir \~{west,south,north,east}

# Define splitting ratio for next window on leaf/parent
super + ctrl + {_,shift +}{1-9}
      bspc node {_,@/} --presel-ratio 0.{1-9}

# Cancel preselection
super + ctrl + space
      bspc node --presel-dir cancel
